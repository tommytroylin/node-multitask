{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
